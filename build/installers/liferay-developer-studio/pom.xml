<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.liferay.ide.build</groupId>
        <artifactId>installers</artifactId>
        <version>3.1.0-SNAPSHOT</version>
    </parent>

    <artifactId>liferay.developer.studio.installer</artifactId>
    <packaging>pom</packaging>

    <name>Liferay IDE Developer Studio Installer</name>

    <properties>
        <portal-download-base>http://mirrors/files.liferay.com/private/ee/portal</portal-download-base>
        <portal-version>7.0.10.3</portal-version>
        <portal-zip-name>liferay-dxp-digital-enterprise-tomcat-7.0-sp3-20170503123037723.zip</portal-zip-name>
        <plugin-sdk-download-base>https://cdn.lfrs.sl/repository.liferay.com/nexus/content/groups/public/com/liferay/portal/com.liferay.portal.plugins.sdk</plugin-sdk-download-base>
        <plugin-sdk-zip-name>com.liferay.portal.plugins.sdk-1.0.11-withdependencies.zip</plugin-sdk-zip-name>
        <plugin-sdk-version>1.0.11</plugin-sdk-version>
        <studio-installer-version>3.1.0</studio-installer-version>
    </properties>

    <build>
        <plugins>
            <plugin>
                <groupId>com.googlecode.maven-download-plugin</groupId>
                <artifactId>download-maven-plugin</artifactId>
                <version>1.3.0</version>
                <executions>
                    <execution>
                        <id>download-dxp-bundle</id>
                        <phase>package</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>${portal-download-base}/${portal-version}/${portal-zip-name}</url>
                            <outputDirectory>../shared/download/</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>download-plugin-sdk</id>
                        <phase>package</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>${plugin-sdk-download-base}/${plugin-sdk-version}/${plugin-sdk-zip-name}</url>
                            <outputDirectory>../shared/download/</outputDirectory>
                        </configuration>
                    </execution>
                    <execution>
                        <id>download-blade</id>
                        <phase>package</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>${blade-latest-download-url}</url>
                            <outputDirectory>../shared/download/</outputDirectory>
                            <outputFileName>blade.jar</outputFileName>
                            <md5>${blade-latest-md5}</md5>
                        </configuration>
                    </execution>
                    <execution>
                        <id>download-bundle-support</id>
                        <phase>package</phase>
                        <goals>
                            <goal>wget</goal>
                        </goals>
                        <configuration>
                            <url>${bundle-support-download-base}/${bundle-support-version}/${bundle-support-name}</url>
                            <outputDirectory>../shared/download/</outputDirectory>
                            <outputFileName>com.liferay.portal.tools.bundle.support.jar</outputFileName>
                        </configuration>
                    </execution>
                </executions>
            </plugin>

            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>1.6.0</version>
                <executions>
                    <execution>
                        <id>linux64</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${install-builder-executable}</executable>
                            <arguments>
                                <argument>build</argument>
                                <argument>./liferay-developer-studio.xml</argument>
                                <argument>linux-x64</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>windows</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${install-builder-executable}</executable>
                            <arguments>
                                <argument>build</argument>
                                <argument>./liferay-developer-studio.xml</argument>
                                <argument>windows</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>osx</id>
                        <phase>package</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>${install-builder-executable}</executable>
                            <arguments>
                                <argument>build</argument>
                                <argument>./liferay-developer-studio.xml</argument>
                                <argument>osx</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-antrun-plugin</artifactId>
                <version>1.6</version>
                <executions>
                    <execution>
                        <id>delete-osx-app</id>
                        <phase>package</phase>
                        <configuration>
                            <target>
                                <delete dir="../outputs/LiferayDeveloperStudio-${studio-installer-version}-osx-installer.app"/>
                            </target>
                        </configuration>
                        <goals>
                            <goal>run</goal>
                        </goals>
                    </execution>
                </executions>
                <dependencies>
                    <dependency>
                        <groupId>org.apache.ant</groupId>
                        <artifactId>ant-nodeps</artifactId>
                        <version>1.8.1</version>
                    </dependency>
                </dependencies>
            </plugin>
        </plugins>
    </build>
</project>
