         </enablement>
      </objectContribution>
   </extension>
   -->
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.liferay.ide.adt.ui.IsNonLiferayAndroidProjectTester"
            id="com.liferay.ide.adt.ui.isNonLiferayAndroidProject"
            namespace="com.liferay.ide.adt.ui"
            properties="isNonLiferayAndroidProject"
            type="org.eclipse.core.resources.IResource">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="com.liferay.ide.adt.ui.addUpdateMobileSDKLibraries"
               icon="icons/e16/mobile-sdk-logo-16x16.png"
               label="Add/Update Liferay Mobile Client APIs..."
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <reference
                     definitionId="com.liferay.ide.adt.ui.nonliferayandroidproject">
               </reference>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            id="com.liferay.ide.adt.ui.addUpdateMobileSDKLibraries"
            name="Add/Update Liferay Mobile Client APIs">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.liferay.ide.adt.ui.handlers.AddUpdateMobileSDKLibrariesHandler"
            commandId="com.liferay.ide.adt.ui.addUpdateMobileSDKLibraries">
      </handler>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="com.liferay.ide.adt.ui.nonliferayandroidproject">
          <iterate
               ifEmpty="false"
               operator="or">
          <adapt type="org.eclipse.core.resources.IResource">
               <test forcePluginActivation="true"
                   property="com.liferay.ide.adt.ui.isNonLiferayAndroidProject" />
           </adapt>
           </iterate>
      </definition>
   </extension>

</plugin>
