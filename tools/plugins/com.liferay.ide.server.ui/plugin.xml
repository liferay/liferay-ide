<plugin>
   <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding
            viewerId="org.eclipse.wst.server.ui.ServersView">
         <includes>
            <contentExtension
                  isRoot="false"
                  pattern="com.liferay.ide.server.ui.serverview.plugins">
            </contentExtension>
            <contentExtension
                  isRoot="false"
                  pattern="com.liferay.ide.server.ui.serverview.osgibundles">
            </contentExtension>
         </includes>
      </viewerContentBinding>
      <viewerContentBinding
            viewerId="org.eclipse.wst.server.ui.ServersView">
         <includes>
            <contentExtension
                  isRoot="false"
                  pattern="com.liferay.ide.server.ui.serverview.properties">
            </contentExtension>
         </includes>
      </viewerContentBinding>
   </extension>

   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.eclipse.wst.server.ui.internal.cnf.ServerContentProvider"
            icon="icons/liferay_logo_16.png"
            id="com.liferay.ide.server.ui.serverview.plugins"
            labelProvider="com.liferay.ide.server.ui.PluginsCustomLabelProvider"
            name="%navigator.content.name"
            priority="highest">
         <triggerPoints>
            <or>
               <instanceof
                     value="org.eclipse.wst.server.core.IServer">
               </instanceof>
               <instanceof
                     value="org.eclipse.wst.server.ui.internal.view.servers.ModuleServer">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="java.lang.Object">
               </instanceof>
               <instanceof
                     value="org.eclipse.wst.server.core.IServer">
               </instanceof>
               <instanceof
                     value="org.eclipse.wst.server.ui.internal.view.servers.ModuleServer">
               </instanceof>
               <instanceof
                     value="com.liferay.ide.server.ui.PluginsContent">
               </instanceof>
            </or>
         </possibleChildren>
         <override
               policy="InvokeAlwaysRegardlessOfSuppressedExt"
               suppressedExtensionId="org.eclipse.wst.server.ui.ServersView.content.root">
         </override>
      </navigatorContent>
      <navigatorContent
            activeByDefault="true"
            contentProvider="com.liferay.ide.server.ui.navigator.PropertiesContentProvider"
            icon="icons/liferay_logo_16.png"
            id="com.liferay.ide.server.ui.serverview.properties"
            labelProvider="com.liferay.ide.server.ui.navigator.PropertiesLabelProvider"
            name="Liferay Portal Properties"
            priority="higher"
            providesSaveables="true">
         <triggerPoints>
            <or>
               <instanceof
                     value="org.eclipse.wst.server.core.IServer">
               </instanceof>
            </or>
         </triggerPoints>
         <possibleChildren>
            <or>
               <instanceof
                     value="java.lang.Object">
               </instanceof>
               <instanceof
                     value="com.liferay.ide.server.ui.navigator.PropertiesFile">
               </instanceof>
            </or>
         </possibleChildren>
         <override
               policy="InvokeAlwaysRegardlessOfSuppressedExt"
               suppressedExtensionId="org.eclipse.wst.server.ui.ServersView.content.root">
         </override>
         <actionProvider
               class="com.liferay.ide.server.ui.navigator.PropertiesActionProvider"
               id="com.liferay.ide.server.ui.serverview.properties.actions"
               priority="highest">
               <enablement>
                  <or>
                     <instanceof
                           value="com.liferay.ide.server.ui.navigator.PropertiesFile">
                     </instanceof>
                  </or>
               </enablement>
         </actionProvider>
      </navigatorContent>
