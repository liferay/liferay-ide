   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            adaptable="true"
            id="com.liferay.ide.server.ui.popup.server"
            objectClass="org.eclipse.wst.server.core.IServer">
         <visibility>
           <and>
              <objectState
                    name="serverType"
                    value="com.liferay.*">
              </objectState>
            </and>
         </visibility>
         <action
               class="com.liferay.ide.server.ui.action.TestWebServicesAction"
               enablesFor="1"
               icon="icons/e16/test_web_services_16x16.png"
               id="com.liferay.ide.server.ui.action.testWebServices.server"
               label="%test.services.action.label">
         </action>
         <action
               class="com.liferay.ide.server.ui.action.OpenLiferayHomeFolderServerAction"
               definitionId="com.liferay.ide.server.ui.handlers.openLiferayHomeFolder"
               enablesFor="1"
               icon="icons/liferay_logo_16.png"
               id="com.liferay.ide.server.ui.action.openLiferayHomeFolderServerAction"
               label="%open.liferay.home.folder.action.label">
         </action>
         <action
               definitionId="com.liferay.ide.server.ui.handlers.openjsonwsapi"
               class="com.liferay.ide.server.ui.action.OpenJSONWSAPIAction"
               enablesFor="1"
               icon="icons/e16/test_web_services_16x16.png"
               id="com.liferay.ide.server.ui.action.openJSONWSAPIAction"
               label="%test.json.services.action.label">
         </action>
         <action
               definitionId="com.liferay.ide.server.ui.handlers.openportalhome"
               class="com.liferay.ide.server.ui.action.OpenPortalHomeAction"
               enablesFor="1"
               icon="icons/e16/open_portal_16x16.png"
               id="com.liferay.ide.server.ui.action.openPortalHomeAction"
               label="%open.portal.home.action.label">
         </action>
         <action
               class="com.liferay.ide.server.ui.action.CreatePortalSettingsFileAction"
               enablesFor="1"
               icon="icons/e16/properties.png"
               id="com.liferay.ide.server.ui.action.createPortalSettingsFile"
               label="Create Portal Settings File">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="com.liferay.ide.server.ui.popup.dbconnection"
            objectClass="org.eclipse.wst.server.core.IServer">
         <visibility>
            <and>
                <objectState
                      name="serverType"
                      value="com.liferay.*">
                </objectState>
            </and>
         </visibility>
         <action
               class="com.liferay.ide.server.ui.action.CreateDBConnectAction"
               enablesFor="1"
               icon="icons/e16/jdbc_16.gif"
               id="com.liferay.ide.server.ui.action.createDBConnectAction"
               label="%create.database.connection.action.label">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="com.liferay.ide.server.ui.popup.module"
            objectClass="org.eclipse.wst.server.ui.IServerModule">
         <visibility>
            <and>
              <objectState
                    name="serverType"
                    value="com.liferay.*">
              </objectState>
            </and>
         </visibility>
         <action
               class="com.liferay.ide.server.ui.action.TestWebServicesAction"
               enablesFor="1"
               icon="icons/e16/test_web_services_16x16.png"
               id="com.liferay.ide.server.ui.action.testWebServices.plugin"
               label="%test.services.action.label">
         </action>
         <action
               definitionId="com.liferay.ide.server.ui.handlers.redeploy"
               class="com.liferay.ide.server.ui.action.RedeployAction"
               enablesFor="1"
               icon="icons/e16/redeploy_16x16.gif"
               id="com.liferay.ide.server.ui.action.redeploy"
               label="%redeploy.action.label">
         </action>
         <action
               definitionId="com.liferay.ide.server.ui.handlers.opendeployedfolder"
               class="com.liferay.ide.server.ui.action.OpenDeployedFolderAction"
               enablesFor="1"
               icon="icons/e16/open_deployed_folder.gif"
               id="com.liferay.ide.server.ui.action.opendeployed"
               label="Open Deployed Folder">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="com.liferay.ide.server.ui.folder.popup.addServer"
            objectClass="org.eclipse.core.resources.IFolder">
         <enablement>
           <adapt type="org.eclipse.core.resources.IFolder">
             <and>
                <test forcePluginActivation="true"
                  property="com.liferay.ide.server.ui.canCreateNewLiferayServer"
                  value="true" />
             </and>
           </adapt>
         </enablement>
         <action
               class="com.liferay.ide.server.ui.action.CreateNewLiferayServerAction"
               enablesFor="1"
               icon="icons/e16/server_new.png"
               id="com.liferay.ide.server.ui.action.createNewLiferayServerFromLocation"
               label="Create New Liferay Server from location">
         </action>
      </objectContribution>
      <objectContribution
            adaptable="true"
            id="com.liferay.ide.server.ui.popup.opengogoshell"
            objectClass="org.eclipse.wst.server.core.IServer">
         <visibility>
            <and>
               <objectState
                     name="serverType"
                     value="com.liferay.ide.server.portal">
               </objectState>
            </and>
         </visibility>
         <action
               class="com.liferay.ide.server.ui.action.OpenGogoShellAction"
               enablesFor="1"
               icon="icons/e16/osgi.png"
               id="com.liferay.ide.server.ui.action.openGogoShell"
               label="Open Gogo Shell">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.wst.server.ui.serverImages">
      <image
            icon="icons/liferay_logo_16.png"
            id="com.liferay.ide.server.remote.image"
            typeIds="com.liferay.ide.eclipse.server.remote">
      </image>
      <image
            icon="icons/liferay_logo_16.png"
            id="com.liferay.ide.server.runtime.stub.image"
            typeIds="com.liferay.ide.eclipse.server.runtime.stub">
      </image>
      <image
            icon="icons/liferay_logo_16.png"
            id="com.liferay.ide.server.portal.image"
            typeIds="com.liferay.ide.server.portal">
      </image>
      <image
            icon="icons/liferay_logo_16.png"
            id="com.liferay.ide.server.portal.runtime.image"
            typeIds="com.liferay.ide.server.portal.runtime">
      </image>
   </extension>
   <extension
         point="org.eclipse.wst.server.ui.wizardFragments">
      <fragment
            class="com.liferay.ide.server.ui.wizard.LiferayRuntimeStubWizardFragment"
            id="com.liferay.ide.server.runtime.stub.fragment"
            typeIds="com.liferay.ide.eclipse.server.runtime.stub">
      </fragment>
      <fragment
            class="com.liferay.ide.server.ui.wizard.RemoteServerWizardFragment"
            id="com.liferay.ide.server.remote.fragment"
            typeIds="com.liferay.ide.eclipse.server.remote">
      </fragment>
      <fragment
            class="com.liferay.ide.server.ui.portal.PortalRuntimeWizard"
            id="com.liferay.ide.server.portal.runtime.fragment"
            typeIds="com.liferay.ide.server.portal.runtime">
      </fragment>
      <fragment
            class="com.liferay.ide.server.ui.portal.PortalServerWizard"
            id="com.liferay.ide.server.portal.fragment"
            typeIds="com.liferay.ide.server.portal">
      </fragment>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTabGroups">
      <launchConfigurationTabGroup
            class="com.liferay.ide.server.ui.RemoteLaunchConfigTabGroup"
            id="com.liferay.ide.server.remote.launchConfigurationTabGroup"
            type="com.liferay.ide.server.remote.launchConfigurationType">
      </launchConfigurationTabGroup>
      <launchConfigurationTabGroup
            class="com.liferay.ide.server.ui.portal.PortalServerLaunchTabGroup"
            id="com.liferay.ide.server.portal.launch.tab"
            type="com.liferay.ide.server.portal.launch">
      </launchConfigurationTabGroup>
   </extension>
   <extension
         point="org.eclipse.debug.ui.launchConfigurationTypeImages">
      <launchConfigurationTypeImage
            configTypeID="com.liferay.ide.server.remote.launchConfigurationType"
            icon="icons/liferay_logo_16.png"
            id="com.liferay.ide.server.remote.launchConfigurationTypeImage">
      </launchConfigurationTypeImage>
      <launchConfigurationTypeImage
            configTypeID="com.liferay.ide.server.portal.launch"
            icon="icons/liferay_logo_16.png"
            id="com.liferay.ide.server.portal.launch.image">
      </launchConfigurationTypeImage>
   </extension>
   <extension
         point="org.eclipse.wst.common.project.facet.core.runtimes">
      <adapter>
         <runtime-component
               id="com.liferay.ide.eclipse.server.runtime.stub.component">
         </runtime-component>
         <factory
               class="com.liferay.ide.server.ui.LiferayRuntimeStubFacetComponentLabelProvider">
         </factory>
         <type
               class="org.eclipse.wst.common.project.facet.ui.IRuntimeComponentLabelProvider">
         </type>
      </adapter>
      <adapter>
         <runtime-component
               id="com.liferay.ide.eclipse.server.runtime.stub.component">
         </runtime-component>
         <factory
               class="com.liferay.ide.server.ui.LiferayRuntimeStubDecorationsProvider">
         </factory>
         <type
               class="org.eclipse.wst.common.project.facet.ui.IDecorationsProvider">
         </type>
      </adapter>
   </extension>
   <extension
         point="org.eclipse.wst.common.project.facet.ui.images">
      <image
            path="icons/liferay_logo_16.png"
            runtime-component-type="com.liferay.ide.eclipse.server.runtime.stub.component">
      </image>
   </extension>
   <extension
         point="org.eclipse.wst.server.ui.editorPageSections">
      <section
            class="com.liferay.ide.server.ui.RemoteSettingsEditorSection"
            id="com.liferay.ide.server.remote.remoteSettings"
            insertionId="org.eclipse.wst.server.editor.overview.left"
            order="0"
            typeIds="com.liferay.ide.eclipse.server.remote">
      </section>
   </extension>

   <extension
         point="org.eclipse.wst.sse.ui.breakpoint">
      <breakpointContribution
            id="com.liferay.ide.server.remote.jsp.breakpoint">
            <provider
                  contentTypes="org.eclipse.jst.jsp.core.jspsource"
                  id="com.liferay.ide.server.remote.jsp.breakpoint">
              <class class="com.liferay.ide.server.ui.RemoteJSPBreakpointProvider">
                <parameter name="org.eclipse.jst.jsp.core.jspsource" value="org.apache.jsp*"/>
              </class>
          </provider>
      </breakpointContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
            class="com.liferay.ide.server.ui.ServerPropertyTester"
            id="com.liferay.ide.server.core.isRemoteServer"
            namespace="com.liferay.ide.server.core"
            properties="isRemoteServer"
            type="java.lang.Object">
      </propertyTester>
      <propertyTester
            class="com.liferay.ide.server.ui.CanCreateNewLiferayServerTester"
            id="com.liferay.ide.server.ui.canCreateNewLiferayServer"
            namespace="com.liferay.ide.server.ui"
            properties="canCreateNewLiferayServer"
            type="org.eclipse.core.resources.IFolder">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.wst.server.core.internalStartup">
      <startup
            class="com.liferay.ide.server.ui.ServerStartup"
            id="com.liferay.ide.server.ui.startup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.mylyn.commons.notifications.ui.notifications">
      <category
            icon="icons/liferay_logo_16.png"
            id="com.liferay.ide.server.ui.settings"
            label="Liferay IDE">
      </category>
      <event
            categoryId="com.liferay.ide.server.ui.settings"
            icon="icons/e16/properties.png"
            id="com.liferay.ide.server.ui.importglobalsettings"
            label="Import Global Settings">
         <defaultHandler
               sinkId="com.liferay.ide.server.ui.ImportGlobalSettingsPopup">
         </defaultHandler>
      </event>
      <sink
            class="com.liferay.ide.server.ui.ImportGlobalSettingsNotificationSink"
            id="com.liferay.ide.server.ui.ImportGlobalSettingsPopup"
            label="Import Global Settings">
      </sink>
   </extension>
   <extension
         point="org.eclipse.wst.server.ui.serverImages">
      <image
            icon="icons/e16/bundle.png"
            id="com.liferay.ide.server.ui.bundleImage"
            typeIds="liferay.bundle">
      </image>
   </extension>

   <extension
         point="org.eclipse.ui.commands">
        <command
            categoryId="org.eclipse.wst.server.ui"
            description="Run the redeploy command"
            id="com.liferay.ide.server.ui.handlers.redeploy"
            name="Redeploy">
        </command>
        <command
            categoryId="org.eclipse.wst.server.ui"
            description="Open Liferay Home Folder"
            id="com.liferay.ide.server.ui.handlers.openLiferayHomeFolder"
            name="Open Liferay Home Folder">
        </command>
        <command
            categoryId="org.eclipse.wst.server.ui"
            description="Run Open Deployed Folder command"
            id="com.liferay.ide.server.ui.handlers.opendeployedfolder"
            name="Open Deployed Folder">
        </command>
        <command
            categoryId="org.eclipse.wst.server.ui"
            description="Run Open JSONWS API command"
            id="com.liferay.ide.server.ui.handlers.openjsonwsapi"
            name="Open JSONWS API">
        </command>
        <command
            categoryId="org.eclipse.wst.server.ui"
            description="Run Open Portal Home command"
            id="com.liferay.ide.server.ui.handlers.openportalhome"
            name="Open JSONWS API">
        </command>
   </extension>

   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="com.liferay.ide.server.ui.handlers.RedeployHandler"
            commandId="com.liferay.ide.server.ui.handlers.redeploy">
      </handler>
      <handler
            class="com.liferay.ide.server.ui.handlers.OpenLiferayHomeFolderHandler"
            commandId="com.liferay.ide.server.ui.handlers.openLiferayHomeFolder">
      </handler>
      <handler
            class="com.liferay.ide.server.ui.handlers.OpenDeployedFolderHandler"
            commandId="com.liferay.ide.server.ui.handlers.opendeployedfolder">
      </handler>
      <handler
            class="com.liferay.ide.server.ui.handlers.OpenJSONWSAPIHandler"
            commandId="com.liferay.ide.server.ui.handlers.openjsonwsapi">
      </handler>
      <handler
            class="com.liferay.ide.server.ui.handlers.OpenPortalHomeHandler"
            commandId="com.liferay.ide.server.ui.handlers.openportalhome">
      </handler>
   </extension>

   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="com.liferay.ide.server.ui.handlers.redeploy"
            contextId="org.eclipse.ui.serverViewScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+R">
      </key>
      <key
            commandId="com.liferay.ide.server.ui.handlers.openLiferayHomeFolder"
            contextId="org.eclipse.ui.serverViewScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M3+O">
      </key>
      <key
            commandId="com.liferay.ide.server.ui.handlers.opendeployedfolder"
            contextId="org.eclipse.ui.serverViewScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+D">
      </key>
      <key
            commandId="com.liferay.ide.server.ui.handlers.openjsonwsapi"
            contextId="org.eclipse.ui.serverViewScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+J">
      </key>
      <key
            commandId="com.liferay.ide.server.ui.handlers.openportalhome"
            contextId="org.eclipse.ui.serverViewScope"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+M2+P">
       </key>
   </extension>

   <extension
         point="org.eclipse.wst.server.core.moduleArtifactAdapters">
      <moduleArtifactAdapter
            class="com.liferay.ide.server.ui.portal.BundleModuleArtifactAdapterDelegate"
            id="com.liferay.ide.server.ui.bundleModuleArtifactAdapter"
            priority="1">
         <enablement>
           <with variable="selection">
             <adapt type="org.eclipse.core.resources.IProject">
              <test forcePluginActivation="true"
                    property="com.liferay.ide.project.core.isBundleProject"
                    value="true" />
             </adapt>
           </with>
         </enablement>
      </moduleArtifactAdapter>
   </extension>
