   </extension>

   <extension
         point="org.eclipse.jst.common.project.facet.core.libraryProviders">
      <provider
            id="com.liferay.ide.eclipse.plugin.portlet.libraryProvider">
         <label>
            Liferay portlet plugin library
         </label>
         <enablement>
            <with
                  variable="requestingProjectFacet">
               <test
                     forcePluginActivation="true"
                     property="org.eclipse.wst.common.project.facet.core.projectFacet"
                     value="liferay.portlet">
               </test>
            </with>
            <with
                  variable="context">
               <test
                     forcePluginActivation="true"
                     property="com.liferay.ide.project.core.isLiferayRuntime"
                     value="true">
               </test>
            </with>
         </enablement>
         <action
               type="INSTALL">
            <operation
                  class="com.liferay.ide.project.core.library.PortletPluginLibraryInstallOperation">
            </operation>
            <config
                  class="org.eclipse.jst.common.project.facet.core.libprov.LibraryProviderOperationConfig">
            </config>
         </action>
      </provider>

