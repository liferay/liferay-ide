<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            default-charset="UTF-8"
            describer="com.liferay.ide.service.core.ServiceBuilderContentDescriber"
            file-extensions="xml"
            file-names="service.xml"
            id="servicebuildercontent"
            name="%service.content.type.name"
            priority="high">
      </content-type>
   </extension>
   <extension
         id="servicebuilderdescriptorvalidator"
         name="%service.builder.descriptor.validator.name"
         point="org.eclipse.wst.validation.validatorV2">
      <validator
            build="true"
            class="com.liferay.ide.service.core.descriptor.ServiceBuilderDescriptorValidator"
            manual="true"
            markerId="com.liferay.ide.service.core.serviceBuilderDescriptorMarker"
            version="1">
         <include>
            <rules>
               <contentType
                     id="com.liferay.ide.service.core.servicebuildercontent">
               </contentType>
            </rules>
         </include>
         <group
               id="org.eclipse.wst.sse.core.structuredModelGroup">
         </group>
      </validator>
   </extension>
   <extension
         id="serviceBuilderDescriptorMarker"
         name="%service.builder.descriptor.problem.name"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.wst.validation.problemmarker">
      </super>
   </extension>
   <extension
         point="com.liferay.ide.templates.core.templateDefinition">
      <template
            id="com.liferay.ide.service.core.defaultServiceXmlFile"
            name="Default service.xml file"
            resource="defaultServiceXmlFile.ftl">
      </template>
      <templatesFolder
            path="templates/">
      </templatesFolder>
      <templateVariable
            name="version"
            required="true">
      </templateVariable>
      <templateVariable
            name="version_"
            required="true">
      </templateVariable>
      <templateVariable
            name="author"
            required="true">
      </templateVariable>
      <templateVariable
            name="namespace"
            required="true">
      </templateVariable>
      <templateVariable
            name="package_path"
            required="true">
      </templateVariable>
   </extension>
   <extension
         point="com.liferay.ide.templates.core.templateDefinition">
      <template
            id="com.liferay.ide.service.core.emptyServiceXmlFile"
            name="Empty service.xml file"
            resource="emptyServiceXmlFile.ftl">
      </template>
      <templatesFolder
            path="templates/">
      </templatesFolder>
      <templateVariable
            name="version"
            required="true">
      </templateVariable>
      <templateVariable
            name="version_"
            required="true">
      </templateVariable>
      <templateVariable
            name="author"
            required="true">
      </templateVariable>
      <templateVariable
            name="namespace"
            required="true">
      </templateVariable>
      <templateVariable
            name="package_path"
            required="true">
      </templateVariable>
   </extension>
   <extension
         point="com.liferay.ide.project.core.liferayDescriptorHelpers">
      <liferayDescriptorHelper
            class="com.liferay.ide.service.core.operation.ServiceBuilderDescriptorHelper"
            contentTypeBinding="com.liferay.ide.service.core.servicebuildercontent"
            id="com.liferay.ide.service.core.serviceBuilderDescriptorHelper">
      </liferayDescriptorHelper>
   </extension>
   
    <extension point="com.liferay.ide.project.core.upgradeLiferayProjectActions">
      <upgradeLiferayProjectAction
            class="com.liferay.ide.service.core.util.UpgradeLiferayProjectServiceBuildAction"
            upgradeActionType="ServicebuilderUpgrade"
            id="com.liferay.ide.service.core.upgradeLiferayProjectServiceBuildAction">
      </upgradeLiferayProjectAction>
   </extension>   
</plugin>
