<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.core.contenttype.contentTypes">
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            default-charset="UTF-8"
            file-extensions="xml"
            file-names="portlet.xml"
            id="portletxml"
            name="%portlet.descriptor.name"
            priority="high">
         <describer
               class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber">
            <parameter
                  name="element"
                  value="portlet-app">
            </parameter>
         </describer>
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            default-charset="UTF-8"
            describer="com.liferay.ide.portlet.core.descriptor.LiferayPortletContentDescriber"
            file-extensions="xml"
            file-names="liferay-portlet.xml"
            id="liferayportletxml"
            name="%liferay.portlet.descriptor.name"
            priority="high">
         <describer
               class="org.eclipse.core.runtime.content.XMLRootElementContentDescriber">
         </describer>
      </content-type>
      <content-type
            base-type="org.eclipse.core.runtime.xml"
            default-charset="UTF-8"
            describer="com.liferay.ide.portlet.core.descriptor.LiferayDisplayContentDescriber"
            file-extensions="xml"
            file-names="liferay-display.xml"
            id="liferaydisplayxml"
            name="%display.descriptor.name"
            priority="high">
      </content-type>
   </extension>
   <extension
         id="portletdescriptorvalidator"
         name="%portlet.descriptor.validator.name"
         point="org.eclipse.wst.validation.validatorV2">
      <validator
            build="true"
            class="com.liferay.ide.portlet.core.descriptor.PortletDescriptorValidator"
            manual="true"
            markerId="com.liferay.ide.portlet.core.portletDescriptorMarker"
            version="1">
         <include>
            <rules>
               <contentType
                     id="com.liferay.ide.portlet.core.portletxml">
               </contentType>
            </rules>
         </include>
         <group
               id="org.eclipse.wst.sse.core.structuredModelGroup">
         </group>
      </validator>
   </extension>
   <extension
         id="liferayportletdescriptorvalidator"
         name="%liferay.portlet.descriptor.validator.name"
         point="org.eclipse.wst.validation.validatorV2">
      <validator
            build="true"
            class="com.liferay.ide.portlet.core.descriptor.LiferayPortletDescriptorValidator"
            manual="true"
            markerId="com.liferay.ide.portlet.core.liferayPortletDescriptorMarker"
            version="1">
         <include>
            <rules>
               <contentType
                     id="com.liferay.ide.portlet.core.liferayportletxml">
               </contentType>
            </rules>
         </include>
         <group
               id="org.eclipse.wst.sse.core.structuredModelGroup">
         </group>
      </validator>
   </extension>
   <extension
         id="liferaydisplaydescriptorvalidator"
         name="%display.descriptor.validator.name"
         point="org.eclipse.wst.validation.validatorV2">
      <validator
            build="true"
            class="com.liferay.ide.portlet.core.descriptor.LiferayDisplayDescriptorValidator"
            manual="true"
            markerId="com.liferay.ide.portlet.core.liferayDisplayDescriptorMarker"
            version="1">
         <include>
            <rules>
               <contentType
                     id="com.liferay.ide.portlet.core.liferaydisplayxml">
               </contentType>
            </rules>
         </include>
         <group
               id="org.eclipse.wst.sse.core.structuredModelGroup">
         </group>
      </validator>
   </extension>
   <extension
         id="portletDescriptorMarker"
         name="%portlet.descriptor.problem.name"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.wst.validation.problemmarker">
      </super>
   </extension>
   <extension
         id="liferayPortletDescriptorMarker"
         name="%liferay.portlet.descriptor.problem.name"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.wst.validation.problemmarker">
      </super>
   </extension>
   <extension
         id="liferayDisplayDescriptorMarker"
         name="%display.descriptor.problem.name"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.wst.validation.problemmarker">
      </super>
   </extension>

   <extension
         point="com.liferay.ide.project.core.portletFrameworks">
      <portletFramework
            class="com.liferay.ide.portlet.core.MVCPortletFramework"
            default="true"
            description="%portlet.framework.description"
            displayName="%portlet.framework.display.name"
            helpUrl="http://www.liferay.com/documentation/liferay-portal/6.1/development"
            id="com.liferay.ide.project.core.framework.mvc"
            requiredSDKVersion="6.0.1"
            shortName="mvc">
      </portletFramework>
   </extension>

   <extension
         point="org.eclipse.wst.xml.core.catalogContributions">
      <catalogContribution
            id="jsp.dtd.contributions">
         <system
               systemId="http://java.sun.com/portlet_2_0"
               uri="platform:/plugin/com.liferay.ide.portlet.core/tld/liferay-portlet.tld">
         </system>
         <system
                systemId="http://liferay.com/tld/aui"
                uri="platform:/plugin/com.liferay.ide.portlet.core/tld/liferay-aui.tld">
         </system>
      </catalogContribution>
   </extension>
   <extension
         point="com.liferay.ide.project.core.liferayDescriptorHelpers">
      <liferayDescriptorHelper
            class="com.liferay.ide.portlet.core.dd.PortletDescriptorHelper"
            id="com.liferay.ide.portlet.core.portletDescriptorHelper">
      </liferayDescriptorHelper>
   </extension>

</plugin>
