<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
	<extension
		point="org.eclipse.ui.navigator.navigatorContent"
	>
		<navigatorContent
			activeByDefault="true"
			contentProvider="com.liferay.ide.upgrade.problems.ui.internal.UpgradeProblemsContentProvider"
			icon="icons/liferay_logo_16.png"
			id="com.liferay.ide.upgrade.problems.ui.navigator.content.liferayUpgradeProblems"
			labelProvider="com.liferay.ide.upgrade.problems.ui.internal.UpgradeProblemsLabelProvider"
			name="Liferay Upgrade Problems"
			priority="highest"
		>
			<triggerPoints>
				<or>
					<instanceof
						value="java.lang.Object"
					>
					</instanceof>
				</or>
			</triggerPoints>
			<possibleChildren>
				<or>
					<instanceof
						value="com.liferay.ide.upgrade.plan.core.UpgradeProblem"
					>
					</instanceof>
					<instanceof
						value="com.liferay.ide.upgrade.problems.ui.internal.FileProblemsContainer"
					>
					</instanceof>
					<instanceof
						value="com.liferay.ide.upgrade.problems.ui.internal.ProjectProblemsContainer"
					>
					</instanceof>
					<instanceof
						value="com.liferay.ide.upgrade.problems.ui.internal.UpgradeProblemsContainer"
					>
					</instanceof>
					<instanceof
						value="org.eclipse.core.resources.IProject"
					>
					</instanceof>
				</or>
			</possibleChildren>
			<actionProvider
				class="com.liferay.ide.upgrade.problems.ui.internal.UpgradeProblemsActionProvider"
				id="com.liferay.ide.upgrade.problems.ui.navigator.content.liferayUpgradeProblems.actions"
				priority="highest"
			>
				<enablement>
					<or>
						<instanceof
							value="com.liferay.ide.upgrade.plan.core.UpgradeProblem"
						>
						</instanceof>
						<instanceof
							value="com.liferay.ide.upgrade.problems.ui.internal.FileProblemsContainer"
						>
						</instanceof>
						<instanceof
							value="com.liferay.ide.upgrade.problems.ui.internal.ProjectProblemsContainer"
						>
						</instanceof>
						<instanceof
							value="com.liferay.ide.upgrade.problems.ui.internal.UpgradeProblemsContainer"
						>
						</instanceof>
						<instanceof
							value="org.eclipse.core.resources.IProject"
						>
						</instanceof>
					</or>
				</enablement>
			</actionProvider>
		</navigatorContent>
	</extension>
	<extension
		point="org.eclipse.ui.navigator.viewer"
	>
		<viewerContentBinding
			viewerId="org.eclipse.ui.navigator.ProjectExplorer"
		>
			<includes>
				<contentExtension
					pattern="com.liferay.ide.upgrade.problems.ui.navigator.content.*"
				>
				</contentExtension>
			</includes>
		</viewerContentBinding>
	</extension>
	<extension
		point="org.eclipse.ui.preferencePages"
	>
		<page
			category="com.liferay.ide.ui.preferences.liferay"
			class="com.liferay.ide.upgrade.problems.ui.internal.UpgradeProblemsPreferencePage"
			id="com.liferay.ide.upgrade.problems.ui.internal.upgradeProblemsPreferencePage"
			name="Upgrade Problems"
		>
		</page>
	</extension>
</plugin>